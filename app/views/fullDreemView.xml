<Alloy>
	<View id="containerView">
		
		<View id="swipeDownView" platform="ios">		
			<ImageView id="closeChevron"/>
		</View>
		
	   	<ScrollView id="dreemContainerScrollView">
    			<Label id="titleLabel"/>		
    			<View id="endorsersView">
    				<ImageView id="endorseStarImage"/>
    				<Label id="amountOfEndorsersLabel"/>
    			</View>
    			<View id="flagDreemView">
    				<ImageView id="flagImage"/>
    				<Label id="flagLabel"/>
    			</View>
    			<View id="separatorLine"/>
    			<Label id="fullDreemLabel"/>
		</ScrollView>
		<View id="bottomBarView">
			<View id="coloredBarView">
				<View id="twitterDetailsContainer">
					<ImageView id="twitterIcon"/>
					<View id="twitterInfoLabelsContainer">
						<Label id="twitterHandleLabel"/>
						<Label id="twitterLocationLabel"/>
					</View>
				</View>
			</View>
			<View id="endorseContainer">	
				<ImageView id="endorseButton"/>
				<Label id="endorseLabel"/>
			</View>
		</View>
	</View>
</Alloy>