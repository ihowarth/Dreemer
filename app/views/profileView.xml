<Alloy>
	<View id="containerView">
	    <View id="navBarView">
	        <ImageView id="backButton"/>
	        <Label id="navBarLabel"/>
	        <ImageView id="logoutButton"/>
	    </View>
	    <View id="profileInfoContainer">
	    	<View id="backgroundView"/>
	    	<View id="profileContainerVerticalView">
		        <ImageView id="twitterProfileImage"/>
		        <Label id="twitterHandleLabel"/>
		        <Label id="locationLabel"/>
		        <View id="userStatsContainer">
		           <ImageView id="endorsersImageView"/>
		           <Label id="amountOfEndorsersLabel"/>
		        </View>
	        </View>
	        
	        <TabbedBar id="dreemsControlTabbedBar" platform="ios">
	            <Labels>
	                <Label>My Dreems</Label>
	                <Label>Endorsed</Label>
	            </Labels>
	        </TabbedBar>
	        
	        <View id="dreemsControlContainerView" platform="android">
	        	<Label id="myDreemsControlLabel"/>
	        	<Label id="endorsedControlLabel"/>
	        </View>
        
	    </View>
	    <View id="resultsContainerView">
		    <View id="noResultsContainerView">
		    	<ImageView id="noResultsImageView"/>
			    <Label id="noResultsLabel"/>
			</View>
		    <TableView id="myDreemsTable"/>
		    <TableView id="endorsedDreemsTable"/>
		</View>
	</View>
</Alloy>